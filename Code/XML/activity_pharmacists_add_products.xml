<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PharmacistsAddProducts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ΠΡΟΣΘΗΚΗ ΠΡΟΪΟΝΤΩΝ"
                    android:textSize="20sp"
                    android:layout_margin="15dp"
                    android:textColor="#e08283"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:id="@+id/layout_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <Button
                    android:id="@+id/button_add_product"
                    android:background="@drawable/round_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ΠΡΟΣΘΕΣΕ ΠΡΟΪΟΝΤΑ"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_add"/>

                <Button
                    android:id="@+id/button_submit_list"
                    android:background="@drawable/round_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="ΥΠΟΒΟΛΗ ΛΙΣΤΑΣ"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
        </LinearLayout>

</ScrollView>