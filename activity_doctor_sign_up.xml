<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorSignUp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="389dp"
        android:text="Διαχείριση Profile Γιατρού"
        android:textColor="#E91E63"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/diploma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/doctorFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:ems="10"
        android:hint="Ονοματεπώνυμο"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/doctorSpecialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Ειδικότητα"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/doctorFullname"
        app:layout_constraintStart_toStartOf="@+id/doctorFullname"
        app:layout_constraintTop_toBottomOf="@+id/doctorFullname" />

    <EditText
        android:id="@+id/doctorAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Διεύθυνση"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toEndOf="@+id/doctorSpecialty"
        app:layout_constraintStart_toStartOf="@+id/doctorSpecialty"
        app:layout_constraintTop_toBottomOf="@+id/doctorSpecialty" />

    <EditText
        android:id="@+id/doctorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Κινητό Τηλέφωνο"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/doctorAddress"
        app:layout_constraintStart_toStartOf="@+id/doctorAddress"
        app:layout_constraintTop_toBottomOf="@+id/doctorAddress" />

    <ImageView
        android:id="@+id/diploma"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/upload"
        app:layout_constraintBottom_toTopOf="@+id/doctorSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/doctorSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:text="Αποθήκευση"
        android:onClick="OnDoctorSignUp"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diploma" />

</androidx.constraintlayout.widget.ConstraintLayout>