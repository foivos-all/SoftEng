<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/ordered_product_card"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/order_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Παραγγελία#1 από Orestis Parekklisitis"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/image_accept_order"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_accept"
                app:tint="#2ecc71" />
            <ImageView
                android:id="@+id/image_reject_order"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_close"
                app:tint="#f22613" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ordered_products_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <ImageView
            android:id="@+id/arrow_drop_down_up"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_arrow_drop_down"
            app:tint="@color/black"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>